---
export interface Props {
	iconname: string;
	width: string;
	service: string;
	color: string;
	onClickScript: string;
}

const { width } = Astro.props;
const { iconname } = Astro.props;
const { service } = Astro.props;
const { onClickScript } = Astro.props;
const { color } = Astro.props;

import { Icon } from "astro-icon";
---

<a
	aria-label={service}
	target="_blank"
	class="flex items-center justify-center mr-1.5 ml-1.5 w-10 h-10 rounded-full leading-10 text-center shadow-md drop-shadow-lg backdrop-blur transition duration-500 hover:bg-gray-200 focus:bg-gray-200"
	onclick={onClickScript}
>
	<!-- To switch to colored icons remove the ': "black"' part and colors will start working -->
	<Icon name={iconname} width={width} style={{ color: "black" }} />
</a>
