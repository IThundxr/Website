---
export interface Props {
    link: string;
	iconname: string;
    width: string;
}

const { width } = Astro.props;
const { link } = Astro.props;
const { iconname } = Astro.props;

import { Icon } from 'astro-icon'
---
<a href={link} class="flex items-center justify-center mr-1.5 ml-1.5 w-10 h-10 rounded-full bg-navbar-bg-color text-navbar-text-color leading-10 text-center shadow-md transition duration-500">
    <Icon name={iconname} width={width}/>
</a>

<style lang="css">
    [astro-icon] {
        color: black;
    }
</style>
